 <html>
  <head>
    <title>Share Recipes</title>
    <link href="http://maxcdn.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap.min.css" rel="stylesheet">
    
    <!-- JS plugins -->
    <script src="http://ajax.googleapis.com/ajax/libs/angularjs/1.3.10/angular.min.js"></script>
    <script src="http://cdnjs.cloudflare.com/ajax/libs/angular-ui-router/0.2.10/angular-ui-router.js"></script>

    <!-- JS -->
    <script src="/javascripts/controllers/HomeCtrl.js"></script>
    <script src="/javascripts/controllers/PostsCtrl.js"></script>
    <script src="/javascripts/controllers/CreatePostsCtrl.js"></script>
    <script src="/javascripts/controllers/UpdatePostsCtrl.js"></script>
    <script src="/javascripts/controllers/CategoriesCtrl.js"></script>
    <script src="/javascripts/controllers/CreateCategoriesCtrl.js"></script>
    <script src="/javascripts/controllers/AuthCtrl.js"></script>
    <script src="/javascripts/controllers/NavCtrl.js"></script>
    <script src="/javascripts/services.js"></script>
    <script src="/javascripts/filters.js"></script>
    <script src="/javascripts/angularApp.js"></script>
    <style> .glyphicon-thumbs-up { cursor:pointer } </style>
  </head>
  <body ng-app="shareRecipes">
