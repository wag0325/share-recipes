  <div class="container-fluid">
    <div class="row">
      <nav class="navbar navbar-default" ng-controller="NavCtrl">
        <div class="container-fluid">
          <!-- Brand and toggle get grouped for better mobile display -->
          <div class="navbar-header">
            <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
              <span class="sr-only">Toggle navigation</span>
              <span class="icon-bar"></span>
              <span class="icon-bar"></span>
              <span class="icon-bar"></span>
            </button>
            <a class="navbar-brand" ui-sref="home">ShareRecipes</a>
          </div>

          <!-- Collect the nav links, forms, and other content for toggling -->
          <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
            <ul class="nav navbar-nav navbar-right">
              <li ng-show="isLoggedIn()"><a>Hi, {{ currentUser() }}</a></li>
              <li ng-show="isLoggedIn()"><a href="" ng-click="logOut()">Log Out</a></li>
              <li ng-hide="isLoggedIn()"><a href="/#/login">Log In</a></li>
              <li ng-hide="isLoggedIn()"><a href="/#/register">Register</a></li>
            </ul>
          </div><!-- /.navbar-collapse -->
        </div><!-- /.container-fluid -->
      </nav>
    </div>
    <ui-view></ui-view>  
    </div>

    <script type="text/ng-template" id="/home.html">
      <div class="row">
      <div class="sidebar col-md-3">
        <div id="searchbar">
          Search: <input ng-model="query">
        </div>
        <div id="sortby">
          Sort by:
          <select ng-model="orderProp" ng-init="orderProp = orderOptions[0]" ng-options="option.name for option in orderOptions">
          </select>
        </div>
       
        <div id="Tags">
          Tags:
          <div ng-repeat="tag in allTags">
            <label>
              <input type="checkbox" ng-model="tagChecked" ng-change="addRemoveTag(tagChecked, tag)"> {{tag}}
            </label>
          </div>
        </div>
        <div id="Price">
        </div>
      </div>
      <div class="content col-md-9">
        <div class="page-header">
          <h1>Share Recipes</h1>
        </div>
        <a href="/#/create" class="btn btn-primary">Create Recipes</a>
        <a href="/#/createcategory" class="btn btn-primary">Categories</a>
        <div class="row">
          <div class="col-sm-4 col-md-3" ng-repeat="post in posts | orderBy:orderProp.value | filter: query">
            <div class="thumbnail">
              <img src="{{post.img_url}}" style="width: 100%; height:200px;"/>
              <div class="caption">
                <h4><a href="#/posts/{{post._id}}">{{post.title | limitTo:titleLimit}}</a></h4>
                <p>
                {{post.category}}
                  <span class="glyphicon glyphicon-thumbs-up"
                    ng-click="incrementUpvotes(post)"></span>
                    {{post.upvotes}} Likes | 
                  <a href="#/posts/{{post._id}}">{{post.comments.length}} Comments</a>
                </p>
                <p>
                <a href="#" class="btn btn-primary" href="{{post.link}}" role="button">Link</a> 
                <a href="#/posts/{{post._id}}" class="btn btn-primary" role="button">Details</a>
                <btn class="btn btn-primary" ng-click="editPost(post._id)" ng-show="post.author==$scope.currentUser">Edit</btn>
                <btn class="btn btn-primary" ng-click="deletePost(post._id)" ng-show="post.author==$scope.currentUser">Delete</btn>
                </p>
              </div>
            </div>
          </div> 
        </div>
      </div>
      </div>
    </script>
    <script type="text/ng-template" id="/post.create.html">
      <div class="page-header">
          <h1>{{pgh}}</h1>
        </div>
      <div ng-hide="isLoggedIn()">
        <h3>You need to <a href="/#/login">Log In</a> or <a href="/#/register">Register</a> before you can add a post.</h3>
      </div>
      <form ng-submit="addPost()"
          ng-show="isLoggedIn()"
          style="margin-top:30px;">
          <h3>Add a new post</h3>

          <div class="form-group">
            <input type="text"
              class="form-control"
              placeholder="Title"
              ng-model="post.title"></input>
          </div>
          <div class="form-group">
            <input type="text"
            class="form-control"
            placeholder="Link"
            ng-model="post.link"></input>
          </div>
          <div class="form-group">
            <input type="text"
            class="form-control"
            placeholder="Image URL"
            ng-model="post.img_url"></input>
          </div>
          <div class="form-group">
            <select name="catSelect" id="catSelect" ng-model="post.category">
              <option ng-repeat="cat in categories" value="{{cat._id}}">{{cat.title}}</option>
            </select>
          </div>
          <div class="form-group">
            <textarea cols="40" rows="10" ng-model="post.body" class="form-control"></textarea>
          </div>
          <div class="form-group">
            <input type="text"
            class="form-control"
            placeholder="Tags"
            ng-model="post.tags"></input>
          </div>
          <button type="submit" class="btn btn-primary">{{submit}}</button>
          <button class="btn btn-primary" ng-click="back()">Cancel</button>
          <button class="btn btn-primary" ng-click="reset()">Clear</button>
        </form>
    </script>
    <script type="text/ng-template" id="/category.create.html">
      <div class="page-header">
          <h1>Create Category</h1>
        </div>
      <div ng-hide="isLoggedIn()">
        <h3>You need to <a href="/#/login">Log In</a> or <a href="/#/register">Register</a> before you can add a category.</h3>
      </div>
      <form ng-submit="addCategory()"
          ng-show="isLoggedIn()"
          style="margin-top:30px;">
          <h3>Add a new category</h3>

          <div class="form-group">
            <input type="text"
              class="form-control"
              placeholder="Title"
              ng-model="title"></input>
          </div>
          <div class="form-group">
            <textarea cols="40" rows="5" ng-model="desc" class="form-control"></textarea>
          </div>
          <button type="submit" class="btn btn-primary">Post</button>
        </form>
        <h2>Category list:</h2>
        <div ng-repeat="cat in categories">
          <a href="/#/categories/{{cat._id}}">{{cat.title}}</a>
          <p>{{cat.desc}}</p>
        </div>
    </script>
    <script type="text/ng-template" id="/categories.html">
    <div class="page-header">
      <h1>Category: {{category.title}}</h1>
      <p>{{category.desc}}</p>
    </div>
    <div ng-repeat="post in posts | orderBy:'-upvotes'">
          <span class="glyphicon glyphicon-thumbs-up"
            ng-click="incrementUpvotes(post)"></span>
          {{post.upvotes}}
          <span style="font-size:20px; margin-left:10px;">
            <a ng-show="post.link" href="{{post.link}}">
              {{post.title}}
            </a>
            <span ng-hide="post.link">
              {{post.title}}
            </span>
            <span ng-show="post.author">
              posted by <a>{{post.author}}</a> |
            </span>
          </span>
          <span>
            <a href="#/posts/{{post._id}}">{{post.comments.length}} Comments</a>
          </span>
          index {{$index}}
          post {{post._id}}
          <btn class="btn btn-primary" ng-click="editPost(post._id)">Edit</btn>
          <btn class="btn btn-primary" ng-click="deletePost(post._id)">Delete</btn>
          <br/>
          <img src="{{post.img_url}}" style="height:100px;" ng-show="post.img_url"/>
        </div>
    </script>
    <script type="text/ng-template" id="/posts.html">
      <btn class="btn btn-primary" ng-click="editPost(post._id)" ng-show="$scope.post.author==$scope.currentUser">Edit</btn>
      <btn class="btn btn-primary" ng-click="deletePost(post._id)" ng-show="$scope.post.author==$scope.currentUser">Delete</btn>
      <div class="page-header">
        <h3>
          <a ng-show="post.link" href="{{post.link}}">
            {{post.title}}
          </a>
          <span ng-hide="post.link">
            {{post.title}}
          </span>
        </h3>
      </div>
      <div>By {{post.author}} at {{post.created_at | date: 'shortDate'}}</div>
      <div>{{post.body}}</div>
      Tags: <span ng-repeat="tag in post.tags">
        {{tag}}
      </span>
      <div ng-repeat="comment in post.comments | orderBy:'-upvotes'">
        <span class="glyphicon glyphicon-thumbs-up"
          ng-click="incrementUpvotes(comment)"></span>
        {{comment.upvotes}} - by {{comment.author}}
        <span style="font-size:20px; margin-left:10px;">
          {{comment.body}}
        </span>
      </div>

      <div ng-hide="isLoggedIn()">
        <h3>You need to <a href="/#/login">Log In</a> or <a href="/#/register">Register</a> before you can comment.</h3>
      </div>
      <form ng-submit="addComment()"
        ng-show="isLoggedIn()"
        style="margin-top:30px;">
        <h3>Add a new comment</h3>

        <div class="form-group">
          <input type="text"
          class="form-control"
          placeholder="Comment"
          ng-model="body"></input>
        </div>
        <button type="submit" class="btn btn-primary">Post</button>
      </form>
  
    </script>
    <script type="text/ng-template" id="/register.html">
      <div class="page-header">
        <h1>Share Recipes</h1>
      </div>

      <div ng-show="error" class="alert alert-danger row">
        <span>{{ error.message }}</span>
      </div>

      <form ng-submit="register()"
        style="margin-top:30px;">
        <h3>Register</h3>

        <div class="form-group">
          <input type="text"
          class="form-control"
          placeholder="Username"
          ng-model="user.username"></input>
        </div>
        <div class="form-group">
          <input type="password"
          class="form-control"
          placeholder="Password"
          ng-model="user.password"></input>
        </div>
        <button type="submit" class="btn btn-primary">Register</button>
      </form>
    </script>
    <script type="text/ng-template" id="/login.html">
      <div class="page-header">
        <h1>Share Recipes</h1>
      </div>

      <div ng-show="error" class="alert alert-danger row">
        <span>{{ error.message }}</span>
      </div>

      <form ng-submit="logIn()"
        style="margin-top:30px;">
        <h3>Log In</h3>

        <div class="form-group">
          <input type="text"
          class="form-control"
          placeholder="Username"
          ng-model="user.username"></input>
        </div>
        <div class="form-group">
          <input type="password"
          class="form-control"
          placeholder="Password"
          ng-model="user.password"></input>
        </div>
        <button type="submit" class="btn btn-primary">Log In</button>
      </form>
    </script>
  </body>
</html>