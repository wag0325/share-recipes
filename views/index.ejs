 <html>
  <head>
    <title>Share Recipes</title>
    <link href="http://maxcdn.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap.min.css" rel="stylesheet">
    <script src="http://ajax.googleapis.com/ajax/libs/angularjs/1.3.10/angular.min.js"></script>
    <script src="http://cdnjs.cloudflare.com/ajax/libs/angular-ui-router/0.2.10/angular-ui-router.js"></script>
    <script src="/javascripts/angularApp.js"></script>
    <style> .glyphicon-thumbs-up { cursor:pointer } </style>
  </head>
  <body ng-app="shareRecipes">
    <nav class="navbar navbar-default pull-right" ng-controller="NavCtrl">
      <ul class="nav navbar-nav">
        <li ng-show="isLoggedIn()"><a>{{ currentUser() }}</a></li>
        <li ng-show="isLoggedIn()"><a href="" ng-click="logOut()">Log Out</a></li>
        <li ng-hide="isLoggedIn()"><a href="/#/login">Log In</a></li>
        <li ng-hide="isLoggedIn()"><a href="/#/register">Register</a></li>
      </ul>
    </nav>
    <div class="container-fluid">
      <div class="col-md-6 col-md-offset-3">
        <ui-view></ui-view>
      </div>
    </div>

    <script type="text/ng-template" id="/home.html">
        <div class="page-header">
          <h1>Share Recipes</h1>
        </div>
        <a href="/#/create" class="btn btn-primary">Create Recipes</a>
        <a href="/#/createcategory" class="btn btn-primary">Categories</a>
        <div ng-repeat="post in posts | orderBy:'-upvotes'">
          <span class="glyphicon glyphicon-thumbs-up"
            ng-click="incrementUpvotes(post)"></span>
          {{post.upvotes}}
          <span style="font-size:20px; margin-left:10px;">
            <a ng-show="post.link" href="{{post.link}}">
              {{post.title}}
            </a>
            <span ng-hide="post.link">
              {{post.title}}
            </span>
            <span ng-show="post.author">
              posted by <a>{{post.author}}</a> |
            </span>
          </span>
          <span>
            <a href="#/posts/{{post._id}}">{{post.comments.length}} Comments</a>
          </span>
          index {{$index}}
          post {{post._id}}
          <btn class="btn btn-primary" ng-click="editPost(post._id)">Edit</btn>
          <btn class="btn btn-primary" ng-click="deletePost(post._id)">Delete</btn>
          <br/>
          <img src="{{post.img_url}}" style="height:100px;" ng-show="post.img_url"/>
        </div>
    </script>
    <script type="text/ng-template" id="/post-create.html">
      <div class="page-header">
          <h1>Create Post</h1>
        </div>
      <div ng-hide="isLoggedIn()">
        <h3>You need to <a href="/#/login">Log In</a> or <a href="/#/register">Register</a> before you can add a post.</h3>
      </div>
      <form ng-submit="addPost()"
          ng-show="isLoggedIn()"
          style="margin-top:30px;">
          <h3>Add a new post</h3>

          <div class="form-group">
            <input type="text"
              class="form-control"
              placeholder="Title"
              ng-model="title"></input>
          </div>
          <div class="form-group">
            <input type="text"
            class="form-control"
            placeholder="Link"
            ng-model="link"></input>
          </div>
          <div class="form-group">
            <input type="text"
            class="form-control"
            placeholder="Image URL"
            ng-model="img_url"></input>
          </div>
          <div class="form-group">
            <select name="catSelect" id="catSelect" ng-model="category">
              <option ng-repeat="cat in categories" value="{{cat._id}}">{{cat.title}}</option>
            </select>
          </div>
          <div class="form-group">
            <textarea cols="40" rows="10" ng-model="body" class="form-control"></textarea>
          </div>
          <div class="form-group">
            <input type="text"
            class="form-control"
            placeholder="Tags"
            ng-model="tags"></input>
          </div>
          <button type="submit" class="btn btn-primary">Post</button>
        </form>
    </script>
    <script type="text/ng-template" id="/category-create.html">
      <div class="page-header">
          <h1>Create Category</h1>
        </div>
      <div ng-hide="isLoggedIn()">
        <h3>You need to <a href="/#/login">Log In</a> or <a href="/#/register">Register</a> before you can add a category.</h3>
      </div>
      <form ng-submit="addCategory()"
          ng-show="isLoggedIn()"
          style="margin-top:30px;">
          <h3>Add a new category</h3>

          <div class="form-group">
            <input type="text"
              class="form-control"
              placeholder="Title"
              ng-model="title"></input>
          </div>
          <div class="form-group">
            <textarea cols="40" rows="5" ng-model="desc" class="form-control"></textarea>
          </div>
          <button type="submit" class="btn btn-primary">Post</button>
        </form>
        <h2>Category list:</h2>
        <div ng-repeat="cat in categories">
          <a href="/#/categories/{{cat._id}}">{{cat.title}}</a>
          <p>{{cat.desc}}</p>
        </div>
    </script>
    <script type="text/ng-template" id="/categories.html">
    <div class="page-header">
      <h1>Category: {{category.title}}</h1>
      <p>{{category.desc}}</p>
    </div>
    </script>
    <script type="text/ng-template" id="/posts.html">
      <btn class="btn btn-primary" ng-click="editPost(post._id)">Edit</btn>
      <btn class="btn btn-primary" ng-click="deletePost(post._id)">Delete</btn>
      <div class="page-header">
        <h3>
          <a ng-show="post.link" href="{{post.link}}">
            {{post.title}}
          </a>
          <span ng-hide="post.link">
            {{post.title}}
          </span>
        </h3>
      </div>
      <div>By {{post.author}} at {{post.created_at | date: 'shortDate'}}</div>
      <div>{{post.body}}</div>
      Tags: <span ng-repeat="tag in post.tags">
        {{tag}}
      </span>
      <div ng-repeat="comment in post.comments | orderBy:'-upvotes'">
        <span class="glyphicon glyphicon-thumbs-up"
          ng-click="incrementUpvotes(comment)"></span>
        {{comment.upvotes}} - by {{comment.author}}
        <span style="font-size:20px; margin-left:10px;">
          {{comment.body}}
        </span>
      </div>

      <div ng-hide="isLoggedIn()">
        <h3>You need to <a href="/#/login">Log In</a> or <a href="/#/register">Register</a> before you can comment.</h3>
      </div>
      <form ng-submit="addComment()"
        ng-show="isLoggedIn()"
        style="margin-top:30px;">
        <h3>Add a new comment</h3>

        <div class="form-group">
          <input type="text"
          class="form-control"
          placeholder="Comment"
          ng-model="body"></input>
        </div>
        <button type="submit" class="btn btn-primary">Post</button>
      </form>
  
    </script>
    <script type="text/ng-template" id="/register.html">
      <div class="page-header">
        <h1>Share Recipes</h1>
      </div>

      <div ng-show="error" class="alert alert-danger row">
        <span>{{ error.message }}</span>
      </div>

      <form ng-submit="register()"
        style="margin-top:30px;">
        <h3>Register</h3>

        <div class="form-group">
          <input type="text"
          class="form-control"
          placeholder="Username"
          ng-model="user.username"></input>
        </div>
        <div class="form-group">
          <input type="password"
          class="form-control"
          placeholder="Password"
          ng-model="user.password"></input>
        </div>
        <button type="submit" class="btn btn-primary">Register</button>
      </form>
    </script>
    <script type="text/ng-template" id="/login.html">
      <div class="page-header">
        <h1>Share Recipes</h1>
      </div>

      <div ng-show="error" class="alert alert-danger row">
        <span>{{ error.message }}</span>
      </div>

      <form ng-submit="logIn()"
        style="margin-top:30px;">
        <h3>Log In</h3>

        <div class="form-group">
          <input type="text"
          class="form-control"
          placeholder="Username"
          ng-model="user.username"></input>
        </div>
        <div class="form-group">
          <input type="password"
          class="form-control"
          placeholder="Password"
          ng-model="user.password"></input>
        </div>
        <button type="submit" class="btn btn-primary">Log In</button>
      </form>
    </script>
  </body>
</html>